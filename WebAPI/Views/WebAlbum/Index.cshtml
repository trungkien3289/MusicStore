<section>
    <!-- left side end-->
    <!-- main content start-->
    <div class="main-content">
        <div id="page-wrapper">
            <div class="inner-content">
                <div class="music-left">
                    <!--banner-section-->
                    <div class="banner-section">
                        <div class="banner">
                            <div class="callbacks_container">
                                <img src="">
                            </div>
                            <!--banner-->
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                    <!--//End-banner-->
                    <!--albums-->
                    @Html.Partial("_ListAlbums", (IList<AlbumSummary>)Model.AlbumsSameArtists, new ViewDataDictionary { { "AlbumGroupTitle", "Album of the same artist" } })
                    <!--//End-albums-->
                </div>
                <!--//music-left-->
                <!--/music-right-->
                <div class="music-right">
                    <div id="mainwrap">
                        <div id="nowPlay" class="scroll-left">
                            <p class="right" id="npTitle"></p>
                        </div>
                        <div id="audiowrap">
                            <div id="audio0">
                                <audio preload id="audio1" controlslist="nodownload" controls="controls">Your browser does not support HTML5 Audio!</audio>
                            </div>
                            <div id="tracks">
                                <a id="btnPrev">&laquo;</a>
                                <a id="btnNext">&raquo;</a>
                            </div>
                        </div>
                        <div id="plwrap">
                            <ul id="plList">
                                @for (int i = 0; i < Model.Songs.Count; i++)
                                {
                                    <li data-mediaurl="@Model.Songs[i].MediaUrl" data-title="@Model.Songs[i].Title">
                                        <div class="plItem">
                                            <div class="plNum">@i</div>
                                            <div class="plTitle">@Model.Songs[i].Title</div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- //script for play-list -->
                    <!--//video-main-->
                    <!--/app_store-->
                    <div class="apps">
                        <h3 class="hd-tittle">Music Online now available in</h3>
                        @*<div class="banner-button">
