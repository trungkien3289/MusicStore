@model IEnumerable<MusicStore.BussinessEntity.ProjectEntity>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashBoard_Layout.cshtml";
}
@section scripts{
    <script src="~/Scripts/build/projectManagement.js"></script>
}
@section css{
    <link href="~/Content/ProjectManagement/scss/main.css" rel="stylesheet" />
    <link href="~/Content/Common/materialize-css-icon.css" rel="stylesheet" />
}
<div class="col-md-12">
    <div class="main-card mb-3 card">
        <div class="card-header">
            <a class="waves-effect waves-light btn"><i class="material-icons left">cloud</i>button</a>
            <div class="btn-actions-pane-right">
                <div role="group" class="btn-group-sm btn-group">
                    <button class="btn btn-primary">@Html.ActionLink("New", "Create", "Project", new { @Style = "color: #fff; text-decoration: none !important;" })</button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Start Date</th>
                        <th class="text-center">End Date</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model)
                    {
                        <tr>
                            <td>
                                <div class="widget-content p-0">
                                    <div class="widget-content-wrapper">
                                        <div class="widget-content-left mr-3">
                                            <div class="widget-content-left">
                                                <img width="40" class="rounded-circle" src="assets/images/avatars/4.jpg" alt="">
                                            </div>
                                        </div>
                                        <div class="widget-content-left flex2">
                                            <div class="widget-heading">@project.Name</div>
                                            <div class="widget-subheading opacity-7">@project.Description</div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">@project.StartDate</td>
                            <td class="text-center">@project.EndDate</td>
                            <td class="text-center">
                                <div class="badge badge-pill badge-info">New</div>
                            </td>
                            <td class="text-center">
                                <button type="button" class="btn btn-primary btn-sm">
                                    @Html.ActionLink("Detail", "Detail", new { id = project.Id }, new { @Style = "color: #fff; text-decoration: none !important;" })
                                </button>
                                <button type="button" class="btn btn-success btn-sm">
                                    @Html.ActionLink("Update", "Update", new { id = project.Id }, new { @Style = "color: #fff; text-decoration: none !important;" })
                                </button>
                                <button type="button" class="btn btn-danger btn-sm">
                                    @Html.ActionLink("Delete", "Delete", new { id = project.Id }, new { @Style = "color: #fff; text-decoration: none !important;" })
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
