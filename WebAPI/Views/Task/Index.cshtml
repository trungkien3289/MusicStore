@model IEnumerable<MusicStore.BussinessEntity.TaskEntity>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_DashBoard_Layout .cshtml";
}

<div class="col-md-12">
    <div class="main-card mb-3 card">
        <div class="card-header">
            Tasks
            <div class="btn-actions-pane-right">
                <div role="group" class="btn-group-sm btn-group">
                    <button class="btn btn-primary">@Html.ActionLink("New", "CreateTask", "Task", new { @Style = "color: #fff; text-decoration: none !important;" })</button>
                </div>
            </div>
        </div>
        <div class="table-responsive">
            <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Start Date</th>
                        <th class="text-center">End Date</th>
                        <th class="text-center">Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>
                                <div class="widget-content p-0">
                                    <div class="widget-content-wrapper">
                                        <div class="widget-content-left mr-3">
                                            <div class="widget-content-left">
                                                <img width="40" class="rounded-circle" src="assets/images/avatars/4.jpg" alt="">
                                            </div>
                                        </div>
                                        <div class="widget-content-left flex2">
                                            <div class="widget-heading">@task.Name</div>
                                            <div class="widget-subheading opacity-7">@task.Description</div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">@task.StartDate</td>
                            <td class="text-center">@task.EndDate</td>

                            <td class="text-center">
                                <div class="badge badge-pill badge-info">New</div>
                            </td>
                            <td class="text-center">
                                <button type="button" id="PopoverCustomT-1" class="btn btn-primary btn-sm">
                                    @Html.ActionLink("Delete", "DeleteTask", new { id = task.Id }, new { @Style = "color: #fff; text-decoration: none !important;" })
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @*<div class="d-block text-center card-footer">
                <button class="mr-2 btn-icon btn-icon-only btn btn-outline-danger"><i class="pe-7s-trash btn-icon-wrapper"> </i></button>
                <button class="btn-wide btn btn-success">Save</button>
            </div>*@
    </div>
</div>

