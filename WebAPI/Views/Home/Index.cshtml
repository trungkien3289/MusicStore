                        </div>
                    </div>
                    <!--//End-banner-->
                    <!--albums-->
                    @Html.Partial("_ListAlbums", (IList<AlbumSummary>)Model.TopAlbums, new ViewDataDictionary { { "AlbumGroupTitle", "Top Album" } })
                    <!--//End-albums-->
                </div>
                <!--//music-left-->
                <!--/music-right-->
                <div class="music-right">
                    <div id="mainwrap">
                        @Html.Partial("_MusicPlayList", (IList<SongEntity>)Model.TopSongs)
