@using MusicStore.BussinessEntity
@model IList<ArtistEntity>
<link href="~/Content/horizontal-spinner.css" rel="stylesheet" />

<div class="itemsummary-list-wrapper artists">
    @foreach (var item in Model)
    {
        <div class="conatiner-itemsummary">
            <div class="image-wrapper-itemsummary">
                <a class="play-icon popup-with-zoom-anim" href="/WebArtist/Details?id=@item.Id"><img src="@item.Thumbnail" title="@item.Name"></a>
            </div>
            <div class="infor-wrapper-itemsummary">
                <div class="item-name">@item.Name</div>
                @if (item.NumberOfAlbums != 0)
                {
                    <div class="item-description">@item.NumberOfAlbums  albums</div>
                }
            </div>
        </div>
    }
</div>

<div class="clearfix"> </div>
<div class="load-more-btn">
    <div class="spinner hide">
        <div></div>
        <div></div>
        <div></div>
        <div></div>
    </div>
    <a class="btn btn-getmoreitems" id="getMoreArtistsBtn">Get more...</a>
</div>

