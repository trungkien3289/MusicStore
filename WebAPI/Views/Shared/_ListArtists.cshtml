@using MusicStore.BussinessEntity
@model IList<ArtistEntity>
<div class="featured-artist-list">
    @if(ViewData["PartialViewTitle"] != null)
    {
        <div class="tittle-head">
            <h3 class="tittle">@ViewData["PartialViewTitle"]</h3>
            <div class="clearfix"> </div>
        </div>
    }

    <div class="item-list-wrapper-listalbum artists">
        @foreach (var item in Model)
        {
            <div class="col-md-3 content-grid artist-item">
                <a class="play-icon popup-with-zoom-anim" href="/WebArtist/Details?id=@item.Id">
                    <img src="@item.Thumbnail" title="@item.Name">
                </a>
            </div>
        }
    </div>
</div>